{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Index{% endblock %}

{% block body %}
    <h1>INDEX</h1>

        <section>
            <h2>Effectuer une recherche</h2>
            <div class="card bg-light mb-3">
                <div class="card-body">

                    {{ form_start(search_form) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(search_form.countryid) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(search_form.categoryid) }}
                        </div>
                    </div>
                    <div class="text-right">
                        <button type="submit" class="btn btn-info">
                            Rechercher
                        </button>
                    </div>
                    {{ form_end(search_form) }}

                </div>
            </div>
        </section>

        <section>
            <h2>DERNIER ARTICLES POSTE</h2>
            {% if articles is empty %}
            <p>Aucun résultat</p>
            {% else %}
                {% for article in articles %}

                    <div class="article">
                        <article id="article_index">
                            {% if article.nameTemplate.id == '1' %}
                                <a href="{{ path('app_article_renderimagetemplate', {'id': article.id}) }}">
                                    <img src="{{ asset('photo/' ~ article.templateImageid.banner ) }}" alt="photo_de_l'article" />
                                </a>
                            {% endif %}
                            {% if article.nameTemplate.id == '2' %}
                                <a href="{{ path('app_article_renderimagetemplate', {'id': article.id}) }}">
                                    <img src="{{ asset('photo/' ~ article.templateTextid.banner ) }}" alt="photo_de_l'article" />
                                </a>
                            {% endif %}
                            {% if article.nameTemplate.id == '3' %}
                                <a href="{{ path('app_article_renderimagetemplate', {'id': article.id}) }}">
                                    <img src="{{ asset('photo/' ~ article.templateMixedid.banner ) }}" alt="photo_de_l'article" />
                                </a>
                            {% endif %}
                            <div class="middle">
                                <h3>Voyage en : {{ article.countryid.countryName }}</h3>
                                <h3>Posté par : {{ article.userid.pseudo }}</h3>
                            </div>
                            <div class="bottom">
                                <a href="{{ path('app_article_renderimagetemplate', {'id': article.id}) }}" class="btn btn-primary mt-1">Voir</a>
                            </div>
                        </article>
                    </div>
                {% endfor %}
            {% endif %}

            {{ knp_pagination_render(articles) }}

        </section>

{% endblock %}