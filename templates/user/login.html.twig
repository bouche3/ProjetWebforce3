{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Connexion{% endblock %}

{% block body %}

    <h1>Connexion</h1>

    <form method="post">
        <div class="form-group">
            <label>Pseudo</label>
            <input type="text" name="_username" class="form-control" value="{{ last_username }}">
        </div>
        <div class="form-group">
            <label>Mot de passe</label>
            <input type="password" name="_password" class="form-control">
            {# Hidden field csrf_token to generate token to reset the password#}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>
        <div class="form-group " style="text-align:right">
            <a  href="{{ path('app_user_forgottenpassword') }}">Mot de passe oubli√© ?</a>
        </div>
        <div class="form-group">
            <button type="submit" class="button standard">Se connecter</button>
        </div>
    </form>

{% endblock %}

