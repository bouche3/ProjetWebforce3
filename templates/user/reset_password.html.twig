{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Réinitialiser le mot de passe{% endblock %}

{% block body %}

    <form method="post" action="{{ path('app_reset_password', {'token':token}) }}">

        <h1 class="h3 mb-3 font-weight-normal">Réinitialiser le mot de passe</h1>

        <div class="form-group">
            <label>Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
        </div>
        <div class="form-group">
            <button class="button standard" type="submit">
                Reinitialiser
            </button>
        </div>
    </form>

{% endblock %}

